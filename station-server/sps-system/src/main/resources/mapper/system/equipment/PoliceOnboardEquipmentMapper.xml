<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jingyu.equipment.mapper.PoliceOnboardEquipmentMapper">
    
    <resultMap type="PoliceOnboardEquipment" id="PoliceOnboardEquipmentResult">
        <result property="id"    column="id"    />
        <result property="deviceName"    column="device_name"    />
        <result property="deviceCode"    column="device_code"    />
        <result property="model"    column="model"    />
        <result property="manufacturer"    column="manufacturer"    />
        <result property="focalLength"    column="focal_length"    />
        <result property="resolutionRatio"    column="resolution_ratio"    />
        <result property="opticalZoom"    column="optical_zoom"    />
        <result property="videoCoding"    column="video_coding"    />
        <result property="prePosition"    column="pre_position"    />
        <result property="networking"    column="networking"    />
        <result property="deptId"    column="dept_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="deleteTime"    column="delete_time"    />
        <result property="operateTime"    column="operate_time"    />
        <result property="operateType"    column="operate_type"    />
        <result property="operateName"    column="operate_name"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectPoliceOnboardEquipmentVo">
        select id, device_name, device_code, model, manufacturer, focal_length, resolution_ratio, optical_zoom, video_coding, pre_position,
          networking, dept_id, create_time, update_time, delete_time, operate_time, operate_type, operate_name, remark
        from police_onboard_equipment
    </sql>

    <select id="selectPoliceOnboardEquipmentList" parameterType="PoliceOnboardEquipment" resultMap="PoliceOnboardEquipmentResult">
        <include refid="selectPoliceOnboardEquipmentVo"/>
        <where>
            operate_type != 2
            <if test="deviceName != null  and deviceName != ''"> and instr(device_name,#{deviceName})</if>
            <if test="deviceCode != null  and deviceCode != ''"> and instr(device_code,#{deviceCode})</if>
            <if test="model != null  and model != ''"> and instr(model,#{model})</if>
            <if test="manufacturer != null  and manufacturer != ''"> and instr(manufacturer,#{manufacturer})</if>
            <if test="focalLength != null  and focalLength != ''"> and instr(focal_length,#{focalLength})</if>
            <if test="resolutionRatio != null  and resolutionRatio != ''"> and instr(resolution_ratio,#{resolutionRatio})</if>
            <if test="opticalZoom != null  and opticalZoom != ''"> and instr(optical_zoom,#{opticalZoom})</if>
            <if test="videoCoding != null  and videoCoding != ''"> and instr(video_coding,#{videoCoding})</if>
            <if test="prePosition != null  and prePosition != ''"> and instr(pre_position,#{prePosition})</if>
            <if test="deptId != null "> and instr(dept_id,#{deptId})</if>
            <if test="networking != null "> and instr(networking,#{networking})</if>
            <if test="deleteTime != null "> and instr(delete_time,#{deleteTime})</if>
            <if test="operateTime != null "> and instr(operate_time,#{operateTime})</if>
            <if test="operateType != null "> and operate_type = #{operateType}</if>
            <if test="operateName != null  and operateName != ''"> and instr(operate_name,#{operateName})</if>
        </where>
        ORDER BY create_time DESC
    </select>
    
    <select id="selectPoliceOnboardEquipmentById" parameterType="Long" resultMap="PoliceOnboardEquipmentResult">
        <include refid="selectPoliceOnboardEquipmentVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertPoliceOnboardEquipment" parameterType="PoliceOnboardEquipment" useGeneratedKeys="true" keyProperty="id">
        insert into police_onboard_equipment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceName != null and deviceName != ''">device_name,</if>
            <if test="deviceCode != null and deviceCode != ''">device_code,</if>
            <if test="model != null and model != ''">model,</if>
            <if test="manufacturer != null and manufacturer != ''">manufacturer,</if>
            <if test="focalLength != null">focal_length,</if>
            <if test="resolutionRatio != null">resolution_ratio,</if>
            <if test="opticalZoom != null">optical_zoom,</if>
            <if test="videoCoding != null">video_coding,</if>
            <if test="prePosition != null">pre_position,</if>
            <if test="networking != null">networking,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="deleteTime != null">delete_time,</if>
            <if test="operateName != null and operateName != ''">operate_name,</if>
            <if test="remark != null">remark,</if>
            create_time,
            operate_time,
            operate_type
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deviceName != null and deviceName != ''">#{deviceName},</if>
            <if test="deviceCode != null and deviceCode != ''">#{deviceCode},</if>
            <if test="model != null and model != ''">#{model},</if>
            <if test="manufacturer != null and manufacturer != ''">#{manufacturer},</if>
            <if test="focalLength != null">#{focalLength},</if>
            <if test="resolutionRatio != null">#{resolutionRatio},</if>
            <if test="opticalZoom != null">#{opticalZoom},</if>
            <if test="videoCoding != null">#{videoCoding},</if>
            <if test="prePosition != null">#{prePosition},</if>
            <if test="networking != null">#{networking},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="deleteTime != null">#{deleteTime},</if>
            <if test="operateName != null and operateName != ''">#{operateName},</if>
            <if test="remark != null">#{remark},</if>
            NOW(),
            NOW(),
            0
         </trim>
    </insert>

    <update id="updatePoliceOnboardEquipment" parameterType="PoliceOnboardEquipment">
        update police_onboard_equipment
        <trim prefix="SET" suffixOverrides=",">
            <if test="deviceName != null and deviceName != ''">device_name = #{deviceName},</if>
            <if test="deviceCode != null and deviceCode != ''">device_code = #{deviceCode},</if>
            <if test="model != null and model != ''">model = #{model},</if>
            <if test="manufacturer != null and manufacturer != ''">manufacturer = #{manufacturer},</if>
            <if test="focalLength != null">focal_length = #{focalLength},</if>
            <if test="resolutionRatio != null">resolution_ratio = #{resolutionRatio},</if>
            <if test="opticalZoom != null">optical_zoom = #{opticalZoom},</if>
            <if test="videoCoding != null">video_coding = #{videoCoding},</if>
            <if test="prePosition != null">pre_position = #{prePosition},</if>
            <if test="networking != null">networking = #{networking},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="deleteTime != null">delete_time = #{deleteTime},</if>
            <if test="operateName != null and operateName != ''">operate_name = #{operateName},</if>
            <if test="remark != null">remark = #{remark},</if>
            operate_time = NOW(),
            update_time = NOW(),
            operate_type = 1
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePoliceOnboardEquipmentById" parameterType="Long">
        update police_onboard_equipment set operate_type = 2, delete_time = NOW(), operate_time = NOW() where id = #{id}
    </delete>

    <delete id="deletePoliceOnboardEquipmentByIds" parameterType="String">
        update police_onboard_equipment set operate_type = 2, delete_time = NOW(), operate_time = NOW() where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>