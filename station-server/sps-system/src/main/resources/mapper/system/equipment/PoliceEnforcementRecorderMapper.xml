<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jingyu.equipment.mapper.PoliceEnforcementRecorderMapper">
    
    <resultMap type="PoliceEnforcementRecorder" id="PoliceEnforcementRecorderResult">
        <result property="id"    column="id"    />
        <result property="deviceName"    column="device_name"    />
        <result property="deviceCode"    column="device_code"    />
        <result property="manufacturer"    column="manufacturer"    />
        <result property="model"    column="model"    />
        <result property="deptId"    column="dept_id"    />
        <result property="nightVision"    column="night_vision"    />
        <result property="imageResolution"    column="image_resolution"    />
        <result property="recordingResolution"    column="recording_resolution"    />
        <result property="memory"    column="memory"    />
        <result property="maxWorkingHours"    column="max_working_hours"    />
        <result property="networking"    column="networking"    />
        <result property="batteryCapacity"    column="battery_capacity"    />
        <result property="statue"    column="statue"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="deleteTime"    column="delete_time"    />
        <result property="operateTime"    column="operate_time"    />
        <result property="operateType"    column="operate_type"    />
        <result property="operateName"    column="operate_name"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectPoliceEnforcementRecorderVo">
        select id, device_name, device_code, manufacturer, model, dept_id, night_vision, image_resolution, recording_resolution, memory,
          max_working_hours, networking, battery_capacity, statue, create_time, update_time, delete_time, operate_time, operate_type, operate_name, remark
        from police_enforcement_recorder
    </sql>

    <select id="selectPoliceEnforcementRecorderList" parameterType="PoliceEnforcementRecorder" resultMap="PoliceEnforcementRecorderResult">
        <include refid="selectPoliceEnforcementRecorderVo"/>
        <where>
            operate_type != 2
            <if test="deviceName != null  and deviceName != ''"> and instr(device_name,#{deviceName})</if>
            <if test="deviceCode != null  and deviceCode != ''"> and instr(device_code,#{deviceCode})</if>
            <if test="manufacturer != null  and manufacturer != ''"> and instr(manufacturer,#{manufacturer})</if>
            <if test="model != null  and model != ''"> and instr(model,#{model})</if>
            <if test="deptId != null "> and instr(dept_id,#{deptId})</if>
            <if test="nightVision != null "> and instr(night_vision,#{nightVision})</if>
            <if test="imageResolution != null  and imageResolution != ''"> and instr(image_resolution,#{imageResolution})</if>
            <if test="recordingResolution != null  and recordingResolution != ''"> and instr(recording_resolution,#{recordingResolution})</if>
            <if test="memory != null "> and instr(memory,#{memory})</if>
            <if test="maxWorkingHours != null  and maxWorkingHours != ''"> and instr(max_working_hours,#{maxWorkingHours})</if>
            <if test="networking != null "> and instr(networking,#{networking})</if>
            <if test="batteryCapacity != null  and batteryCapacity != ''"> and instr(battery_capacity,#{batteryCapacity})</if>
            <if test="statue != null "> and statue = #{statue}</if>
            <if test="deleteTime != null "> and instr(delete_time,#{deleteTime})</if>
            <if test="operateTime != null "> and instr(operate_time,#{operateTime})</if>
            <if test="operateType != null "> and operate_type = #{operateType}</if>
            <if test="operateName != null  and operateName != ''"> and instr(operate_name,#{operateName})</if>
        </where>
        ORDER BY create_time DESC
    </select>
    
    <select id="selectPoliceEnforcementRecorderById" parameterType="Long" resultMap="PoliceEnforcementRecorderResult">
        <include refid="selectPoliceEnforcementRecorderVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertPoliceEnforcementRecorder" parameterType="PoliceEnforcementRecorder" useGeneratedKeys="true" keyProperty="id">
        insert into police_enforcement_recorder
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceName != null and deviceName != ''">device_name,</if>
            <if test="deviceCode != null and deviceCode != ''">device_code,</if>
            <if test="manufacturer != null and manufacturer != ''">manufacturer,</if>
            <if test="model != null and model != ''">model,</if>
            <if test="deptId != null">dept_id,</if>
            <if test="nightVision != null">night_vision,</if>
            <if test="imageResolution != null">image_resolution,</if>
            <if test="recordingResolution != null">recording_resolution,</if>
            <if test="memory != null">memory,</if>
            <if test="maxWorkingHours != null">max_working_hours,</if>
            <if test="networking != null">networking,</if>
            <if test="batteryCapacity != null">battery_capacity,</if>
            <if test="statue != null">statue,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="deleteTime != null">delete_time,</if>
            <if test="operateName != null and operateName != ''">operate_name,</if>
            <if test="remark != null">remark,</if>
            create_time,
            operate_time,
            operate_type
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deviceName != null and deviceName != ''">#{deviceName},</if>
            <if test="deviceCode != null and deviceCode != ''">#{deviceCode},</if>
            <if test="manufacturer != null and manufacturer != ''">#{manufacturer},</if>
            <if test="model != null and model != ''">#{model},</if>
            <if test="deptId != null">#{deptId},</if>
            <if test="nightVision != null">#{nightVision},</if>
            <if test="imageResolution != null">#{imageResolution},</if>
            <if test="recordingResolution != null">#{recordingResolution},</if>
            <if test="memory != null">#{memory},</if>
            <if test="maxWorkingHours != null">#{maxWorkingHours},</if>
            <if test="networking != null">#{networking},</if>
            <if test="batteryCapacity != null">#{batteryCapacity},</if>
            <if test="statue != null">#{statue},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="deleteTime != null">#{deleteTime},</if>
            <if test="operateName != null and operateName != ''">#{operateName},</if>
            <if test="remark != null">#{remark},</if>
            NOW(),
            NOW(),
            0
         </trim>
    </insert>

    <update id="updatePoliceEnforcementRecorder" parameterType="PoliceEnforcementRecorder">
        update police_enforcement_recorder
        <trim prefix="SET" suffixOverrides=",">
            <if test="deviceName != null and deviceName != ''">device_name = #{deviceName},</if>
            <if test="deviceCode != null and deviceCode != ''">device_code = #{deviceCode},</if>
            <if test="manufacturer != null and manufacturer != ''">manufacturer = #{manufacturer},</if>
            <if test="model != null and model != ''">model = #{model},</if>
            <if test="deptId != null">dept_id = #{deptId},</if>
            <if test="nightVision != null">night_vision = #{nightVision},</if>
            <if test="imageResolution != null">image_resolution = #{imageResolution},</if>
            <if test="recordingResolution != null">recording_resolution = #{recordingResolution},</if>
            <if test="memory != null">memory = #{memory},</if>
            <if test="maxWorkingHours != null">max_working_hours = #{maxWorkingHours},</if>
            <if test="networking != null">networking = #{networking},</if>
            <if test="batteryCapacity != null">battery_capacity = #{batteryCapacity},</if>
            <if test="statue != null">statue = #{statue},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="deleteTime != null">delete_time = #{deleteTime},</if>
            <if test="operateName != null and operateName != ''">operate_name = #{operateName},</if>
            <if test="remark != null">remark = #{remark},</if>
            operate_time = NOW(),
            update_time = NOW(),
            operate_type = 1
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePoliceEnforcementRecorderById" parameterType="Long">
        update police_enforcement_recorder set operate_type = 2, delete_time = NOW(), operate_time = NOW() where id = #{id}
    </delete>

    <delete id="deletePoliceEnforcementRecorderByIds" parameterType="String">
        update police_enforcement_recorder set operate_type = 2, delete_time = NOW(), operate_time = NOW() where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>